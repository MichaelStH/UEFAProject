<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activites.TeamPlayersActivity">

    <LinearLayout
        android:id="@+id/team_players_title_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="16dp"
            android:layout_gravity="center"
            android:text="@string/players"
            android:textStyle="bold"
            android:textSize="24sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/team_players_header_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/team_players_title_header">

        <include layout="@layout/team_players_header_list"></include>

    </LinearLayout>

</RelativeLayout>